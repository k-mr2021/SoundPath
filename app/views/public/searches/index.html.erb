<div>
  <div>
    <div>
      <% if @keyword.present? %>
        <h3><%= "#{@keyword}の検索結果" %></h3
      <% end %>
    </div>
  </div>
  <% if @users == [] %>
    <h5><span>Artists</span>なし</h5>
  <% end %>
  <div>
    <% @users.each do |user| %>
      <div>
        <b>Artists</b><br>
        <%= user.name %>
      </div>
    <% end %>
  </div>
  <% if @post_musics == [] %>
    <h5><span>Tracks</span>なし</h5>
  <% end %>
  <div>
    <% @post_musics.each do |post_music| %>
      <div>
        <b>Tracks</b><br>
        <%= post_music.title %>
        <%= post_music.body %>
  　　　　<audio src= "<%= "#{post_music.file}" %>" controls="">
           <a src="<%= "#{post_music.file}" %>">ダウンロード</a>
         </audio>
      </div>
    <% end %>
  </div>
</div>























