<div class= "container">
  <div class="row">
    <div class= "col">
      <h3 class="mt-4 mb-2 "><%= @user_found.name %>会員情報</h3>
    </div>
  </div>
  <div class= "row">
    <div class= "col-lg-10 col-sm-6">
      <table class= "table">
        <tr>
          <th>User_ID</th>
          <td><%= @user_found.id %></td>
        </tr>
        <tr>
          <th>Name</th>
          <td><%= @user_found.name %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @user_found.email %></td>
        </tr>
        <tr>
          <th>Introduction</th>
          <td><%= @user_found.introduction %></td>
        </tr>
        <tr>
          <th>Status</th>
          <td>
            <% if @user_found.is_active == false %>
              <b class="text-success font-weight-bold">無効</b>
            <% else %>
              <b class="text-success font-weight-bold">有効</b>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <b><%= @user_found.name %>の投稿</b>
    </div>
  </div>
  <!--投稿がない場合の分岐-->
  <div class="row">
    <% if @post_musics.present? %>
      <% @post_musics.each do |post_music| %>
        <div class="card mt-2 shadow-lg">
          <div class="card-body">
            <div class="col-xl-auto col-lg-auto col-sm-auto col-auto">
              <%= post_music.body %>
              <audio src= "<%= "#{post_music.file}" %>" controls="" class="custom-audio-player mb-2">
                <a src="<%= "#{post_music.file}" %>">ダウンロード</a>
              </audio>
            </div>
            <div class="col-xl-auto col-lg-auto col-sm-auto col-auto">
              <p class="card-title">
                <strong><i class="fa-regular fa-file-audio"></i><span><%= post_music.title %></span></strong><br>
              </p>
              <strong><i class="fa-solid fa-circle-user"></i><span><%= post_music.user.name %></span></strong> 
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col">
        <b>投稿内容がありません</b>
      </div>
    <% end %>
  </div>
  <div class ="row justify-content-center">
    <%= link_to "ステータス変更", edit_admin_user_path(@user_found), class:"btn btn-success my-1 mx-4 px-4" %>
  </div>
</div>

































